				integral=0;
				OnRev(OUT_A,left);
				OnRev(OUT_C,right);
				blind=70;
			}
			else
			{
				OnRev(OUT_A,left);
				OnRev(OUT_C,right);
			}
		}


		
		OnRev(OUT_A,right);
		OnRev(OUT_C,left);
	
		Wait(1);
